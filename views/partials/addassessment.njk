<form class="ui segment form" action="/dashboard/addassessment" method="POST">
  <div class="three fields">
    <div class="field">
      <label>Weight</label>
      <input placeholder="00.00kg" type="text" name="weight">
      <div class="ui pointing label">weight (kg)</div>
    </div>
    <div class="field">
      <label>Chest</label>
      <input placeholder="00.00cm" type="text" name="chest">
      <div class="ui pointing label">chest (cm)</div>
    </div>
    <div class="field">
      <label>Thigh</label>
      <input placeholder="00.00cm" type="text" name="thigh">
      <div class="ui pointing label">thigh (cm)</div>
    </div>
  </div>
  <div class="three fields">
    <div class="field">
      <label>Upper Arm</label>
      <input placeholder="00.00cm" type="text" name="upperarm">
      <div class="ui pointing label">upper-arm (cm)</div>
    </div>
    <div class="field">
      <label>Waist</label>
      <input placeholder="00.00cm" type="text" name="waist">
      <div class="ui pointing label">waiste (cm)</div>
    </div>
    <div class="field">
      <label>Hips</label>
      <input placeholder="00.00cm" type="text" name="hips">
      <div class="ui pointing label">hips (cm)</div>
    </div>
  </div>
  <button class="ui blue submit button"> Add Assessment for {{ user.name }}</button>
</form>
<script>
    $('.ui.dropdown')
        .dropdown();

    $('.ui.form')
        .form({
            fields: {
                weight: {
                    identifier: 'weight',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Please enter your weight in KG'
                        }
                    ]
                },
                chest: {
                    identifier: 'chest',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Please enter your chest measurement in CM.'
                        }
                    ]
                },
                thigh: {
                    identifier: 'thigh',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Please enter your thigh measurement in CM.'
                        }
                    ]
                },
                upperarm: {
                    identifier: 'upperarm',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Please enter your upperarm measurement in CM.'
                        }
                    ]
                },
                waist: {
                    identifier: 'waist',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Please enter your waist measurement in CM.'
                        }
                    ]
                },
                hips: {
                    identifier: 'hips',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Please enter your hips measurement in CM.'
                        }
                    ]
                },
            }
        })
    ;
</script>